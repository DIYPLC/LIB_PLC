DbDriverAo420_MV.In              := MV                           ; //Вход сигнала на исполнительный механизм.
DbDriverAo420_MV.InMax           := "Db1PIRCA1Hmi".MotorMaxAo    ; //Исполнительный механизм максимум.
DbDriverAo420_MV.InMin           := "Db1PIRCA1Hmi".MotorMinAo    ; //Исполнительный механизм минимум.
DbDriverAo420_MV.SimulationValue := "Db1PIRCA1Hmi".SimulationAo  ; //Значение для исполнительного механизма при симуляции.
DbDriverAo420_MV.SimulationOn    := "Db1PIRCA1Hmi".SimulationAoOn; //Включить симуляцию.
DbDriverAo420_MV()                                               ; //Драйвер аналогово выхода 4...20мА.
DAC_Frequency                    := DbDriverAo420_MV.DAC         ; //ЦАП Сигнал на исполнительный механизм 0...27648.
//                               := DbDriverAo420_MV.Current     ; //Ток на аналоговом выходе 4...20мА.

